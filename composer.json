    ],
    "require": {
        "composer/composer": "^1.0",
        "fxp/composer-asset-plugin": "^1.1",
        "yiisoft/yii2": "^2.0",
        "yiisoft/yii2-debug": "^2.0",
        "guzzlehttp/guzzle": "^6.0"
    },
    "require-dev": {
        "hiqdev/hidev": "dev-master",
        "hiqdev/hidev-php": "<2.0",
        "hiqdev/hidev-vendor": "<2.0"
    },
    "autoload": {
        "psr-4": {
            "hiqdev\\assetpackagist\\": "src"
        }
    },
    "extra": {
        "config-plugin": {
            "aliases": "src/config/aliases.php",
            "params": "src/config/params.php",
            "hidev": "src/config/hidev.php",
            "hisite": "src/config/hisite.php"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ]
}
